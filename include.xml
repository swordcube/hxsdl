<xml>
	<pragma once="true" />
	<set name="LINK_TOOLID" value="exe"/>

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxsdl}/vendor/include/sdl2" />
		<compilerflag value="-I${haxelib:hxsdl}/vendor/src/sdl2" />
		<compilerflag value="-I${haxelib:hxsdl}" />
	</files>
	
	<files id="__main__">
		<compilerflag value="-I${haxelib:hxsdl}/vendor/include/sdl2" />
		<compilerflag value="-I${haxelib:hxsdl}/vendor/src/sdl2" />
		<compilerflag value="-I${haxelib:hxsdl}" />
	</files>

	<target id="haxe">
		<flag value="-fstack-protector" if="mingw" />

		<!-- mingw. . .-->
		<section if="mingw">
			<lib name="${haxelib:hxsdl}/vendor/lib/MinGW/libSDL2.a" />
		</section>

		<!--64 bit only-->
		<section if="windows" unless="mingw">
			<lib name="${haxelib:hxsdl}/vendor/lib/Windows/x64/SDL2.lib" />
			<lib name="kernel32.lib" />
			<lib name="user32.lib" />
			<lib name="shell32.lib" />
			<lib name="gdi32.lib" />
			<lib name="comctl32.lib" />
			<lib name="winmm.lib" />
			<lib name="setupapi.lib" />
			<lib name="advapi32.lib" />
			<lib name="ole32.lib" />
			<lib name="version.lib" />
			<lib name="imm32.lib" />
			<lib name="ws2_32.lib" />
			<lib name="oleaut32.lib" />
			<lib name="wldap32.lib" />
		</section>

		<section if="macos">
			<lib name="${haxelib:hxsdl}/vendor/lib/macOS/x64/libSDL2.a" />
		</section>

		<section if="linux || android">
			<lib name="-lSDL2" />
		</section>

		<!--additional macos flags that maybe do something i don't know bro-->
		<section if="macos || ios">
			<vflag name="-framework" value="OpenGL" />
			<vflag name="-framework" value="Cocoa" />
		</section>
	</target>
</xml>
